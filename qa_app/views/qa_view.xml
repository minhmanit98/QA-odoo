<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="qa_form_view" model="ir.ui.view">
            <field name="name">QA Form</field>
            <field name="model">utc2.qa</field>
            <field name="arch" type="xml">
                <form string="QA">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="category"/>
                            <field name="date_published" />
                            <field name="active" />
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="qa_tree_view" model="ir.ui.view">
            <field name="name">QA List</field>
            <field name="model">utc2.qa</field>
            <field name="arch" type="xml">
                <tree string="QA">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="date_published"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="qa_search_view" model="ir.ui.view">
            <field name="name">QA search</field>
            <field name="model">utc2.qa</field>
            <field name="arch" type="xml">
                <search string="Question and Answer">
<!--                    <group expand="1" string="Group By">-->
<!--                        <filter string="QA" name="name" domain="[]"-->
<!--                                context="{'group_by':'name'}"/>-->
<!--                    </group>-->
                </search>
            </field>
        </record>

