<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="qld_form_view" model="ir.ui.view">
            <field name="name">QLD Form</field>
            <field name="model">utc2.qld</field>
            <field name="arch" type="xml">
                <form string="QA">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_sync_scores" type="object"  class="oe_stat_button" icon="fa-users">
<!--                                <field string="Groups" name="groups_count" widget="statinfo"/>-->
                            </button>
                        </div>
                        <group>
                            <field name="name" />
                            <field name="user_id"/>
                            <field name="scores_4end" />
                            <field name="scores_4end_cus" />
                            <field name="tong_stc" />
                        </group>
                        <label for="scores_ids" string="Bảng điểm"/>
                        <field name="scores_ids"/>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="qld_tree_view" model="ir.ui.view">
            <field name="name">QLD List</field>
            <field name="model">utc2.qld</field>
            <field name="arch" type="xml">
                <tree string="QA">
                    <field name="name"/>
                   <field name="user_id"/>
                    <field name="scores_4end" />
                    <field name="scores_4end_cus" />
                    <field name="scores_ids" />
                </tree>
            </field>
        </record>

        <record id="qld_search_view" model="ir.ui.view">
            <field name="name">QLD search</field>
            <field name="model">utc2.qld</field>
            <field name="arch" type="xml">
                <search string="Question and Answer">
<!--                    <group expand="1" string="Group By">-->
<!--                        <filter string="QA" name="name" domain="[]"-->
<!--                                context="{'group_by':'name'}"/>-->
<!--                    </group>-->
                </search>
            </field>
        </record>

    </data>
</odoo>